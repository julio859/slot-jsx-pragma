{
  "private": true,
  "license": "MIT",
  "repository": "jjenzz/slot-jsx-pragma",
  "author": "Jenna Smith <175330+jjenzz@users.noreply.github.com>",
  "scripts": {
    "postinstall": "pnpm build",
    "build": "pnpm --filter=\"slot-jsx\" build",
    "release": "auto shipit"
  },
  "devDependencies": {
    "auto": "^11.3.6",
    "lerna": "^9.0.3",
    "prettier": "^3.7.4"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "engines": {
    "pnpm": ">= 9",
    "node": ">= 22"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19"
    }
  },
  "auto": {
    "noDefaultLabels": true,
    "plugins": [
      "released",
      [
        "npm",
        {
          "subPackageChangelogs": false,
          "monorepoChangelog": false,
          "commitNextVersion": true
        }
      ]
    ],
    "labels": [
      {
        "name": "changelog: breaking",
        "changelogTitle": "üí• Breaking Change",
        "description": "Add breaking change to changelog when merged",
        "releaseType": "major",
        "color": "#C5000B"
      },
      {
        "name": "changelog: enhancement",
        "changelogTitle": "üöÄ Enhancement",
        "description": "Add enhancement to changelog when merged",
        "releaseType": "minor",
        "color": "#F1A60E"
      },
      {
        "name": "changelog: bug",
        "changelogTitle": "üêõ Bug Fix",
        "description": "Add bug fix to changelog when merged",
        "releaseType": "patch",
        "color": "#870048"
      },
      {
        "name": "changelog: chore",
        "changelogTitle": "üè† Housekeeping",
        "description": "Add chore to changelog when merged, no versioning required",
        "releaseType": "none",
        "color": "#696969"
      },
      {
        "name": "changelog: docs",
        "changelogTitle": "üìù Documentation",
        "description": "Add docs to changelog when merged, no versioning required",
        "releaseType": "none",
        "color": "#cfd3d7"
      },
      {
        "name": "changelog: performance",
        "changelogTitle": "üèé Performance",
        "description": "Add performance improvement to changelog when merged",
        "releaseType": "patch",
        "color": "#f4b2d8"
      },
      {
        "name": "skip-release",
        "description": "Preserve the current version when merged",
        "releaseType": "skip",
        "color": "#bf5416"
      }
    ]
  }
}
