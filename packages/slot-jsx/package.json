{
  "name": "slot-jsx",
  "version": "0.2.0",
  "license": "MIT",
  "type": "module",
  "description": "Custom JSX pragma for slottable components with asChild pattern.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "jjenzz/slot-jsx-pragma",
  "author": "Jenna Smith <175330+jjenzz@users.noreply.github.com>",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./react/jsx-runtime": {
      "types": "./dist/react/jsx-runtime.d.ts",
      "default": "./dist/react/jsx-runtime.js"
    },
    "./react/jsx-dev-runtime": {
      "types": "./dist/react/jsx-dev-runtime.d.ts",
      "default": "./dist/react/jsx-dev-runtime.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "cp ../../README.md ./README.md",
    "postpublish": "rm ./README.md"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "typescript": "~5.9.3"
  }
}
